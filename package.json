{
  "name": "zkfair-l2",
  "version": "1.0.0",
  "description": "ZKFair L2 - Polygon CDK with Celestia DA and Stablecoin Gas",
  "private": true,
  "workspaces": [
    "contracts",
    "bundler",
    "frontend",
    "backend",
    "sdk"
  ],
  "scripts": {
    "install:all": "npm install && npm run install:contracts",
    "install:contracts": "cd contracts && forge install",
    "build": "npm run build:contracts && npm run build:bundler && npm run build:backend && npm run build:frontend",
    "build:contracts": "cd contracts && forge build",
    "build:bundler": "cd bundler && npm run build",
    "build:backend": "cd backend && npm run build",
    "build:frontend": "cd frontend && npm run build",
    "test": "npm run test:contracts && npm run test:bundler && npm run test:backend",
    "test:contracts": "cd contracts && forge test",
    "test:bundler": "cd bundler && npm test",
    "test:backend": "cd backend && npm test",
    "start:dev": "docker-compose up -d",
    "stop:dev": "docker-compose down",
    "deploy:contracts": "cd contracts && forge script script/Deploy.s.sol --broadcast",
    "lint": "npm run lint:contracts && npm run lint:ts",
    "lint:contracts": "cd contracts && forge fmt --check",
    "lint:ts": "eslint . --ext .ts,.tsx",
    "format": "prettier --write \"**/*.{js,jsx,ts,tsx,json,md}\""
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.50.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-react": "^7.33.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "prettier": "^3.0.0",
    "typescript": "^5.2.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/zkfair/zkfair-l2.git"
  },
  "keywords": [
    "blockchain",
    "layer2",
    "polygon-cdk",
    "celestia",
    "erc4337",
    "account-abstraction"
  ],
  "author": "ZKFair Team",
  "license": "MIT"
}