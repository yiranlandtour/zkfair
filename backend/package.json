{
  "name": "@zkfair/backend",
  "version": "1.0.0",
  "description": "ZKFair L2 Backend API",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "ts-node-dev --respawn src/index.ts",
    "test": "jest --coverage",
    "test:watch": "jest --watch",
    "test:unit": "jest --testPathPattern=src/tests",
    "test:integration": "jest --testPathPattern=src/tests/integration",
    "test:ci": "jest --coverage --ci --reporters=default --reporters=jest-junit",
    "lint": "eslint src --ext .ts",
    "format": "prettier --write \"src/**/*.ts\"",
    "prisma:generate": "prisma generate",
    "prisma:migrate": "prisma migrate dev",
    "prisma:migrate:test": "dotenv -e .env.test -- prisma migrate dev",
    "prisma:studio": "prisma studio"
  },
  "dependencies": {
    "@account-abstraction/contracts": "^0.6.0",
    "@prisma/client": "^6.14.0",
    "@sendgrid/mail": "^8.1.0",
    "apn": "^2.2.0",
    "aws-sdk": "^2.1506.0",
    "bullmq": "^5.0.0",
    "cors": "^2.8.5",
    "dotenv": "^16.3.0",
    "ethers": "^6.8.0",
    "express": "^4.18.0",
    "express-rate-limit": "^7.1.0",
    "firebase-admin": "^12.0.0",
    "helmet": "^7.1.0",
    "ioredis": "^5.3.2",
    "jsonwebtoken": "^9.0.2",
    "messagebird": "^4.0.0",
    "nodemailer": "^6.9.7",
    "redis": "^4.6.10",
    "socket.io": "^4.6.0",
    "twilio": "^4.20.0",
    "winston": "^3.11.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/cors": "^2.8.0",
    "@types/express": "^4.17.0",
    "@types/jest": "^29.5.0",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/node": "^20.0.0",
    "@types/supertest": "^2.0.16",
    "jest": "^29.7.0",
    "prisma": "^5.6.0",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.0",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.2.0"
  }
}