# Database
DATABASE_URL="postgresql://zkfair:password@localhost:5432/zkfair?schema=public"

# Server
PORT=3001
NODE_ENV=development

# Blockchain
L2_RPC_URL=http://localhost:8545
CHAIN_ID=42161

# JWT Auth
JWT_SECRET=your-secret-key-change-in-production
JWT_EXPIRES_IN=24h
JWT_REFRESH_EXPIRES_IN=7d

# CORS
CORS_ORIGIN=http://localhost:3000,http://localhost:5173

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Security Headers
HELMET_CSP_DIRECTIVES=default-src 'self'

# Logging
LOG_LEVEL=info
LOG_FILE=app.log

# Redis (for caching and queues)
REDIS_URL=redis://localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# WebSocket
WEBSOCKET_URL=ws://localhost:3001

# Email Notifications
EMAIL_PROVIDER=sendgrid # Options: sendgrid, ses, smtp
SENDGRID_API_KEY=
EMAIL_FROM_ADDRESS=noreply@zkfair.io
EMAIL_FROM_NAME=ZKFair
EMAIL_REPLY_TO=
EMAIL_CLICK_TRACKING=true
EMAIL_OPEN_TRACKING=true
EMAIL_SANDBOX=false

# SendGrid Templates
SENDGRID_TEMPLATE_TRANSACTION_SENT=
SENDGRID_TEMPLATE_TRANSACTION_CONFIRMED=
SENDGRID_TEMPLATE_TRANSACTION_FAILED=
SENDGRID_TEMPLATE_LOGIN_ALERT=
SENDGRID_TEMPLATE_SECURITY_ALERT=
SENDGRID_TEMPLATE_WALLET_RECOVERY=
SENDGRID_TEMPLATE_NEW_PROPOSAL=
SENDGRID_TEMPLATE_VOTING_REMINDER=

# AWS SES Configuration (if using SES)
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=

# SMTP Configuration (if using SMTP)
SMTP_HOST=
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=
SMTP_PASS=

# SMS Notifications
SMS_PROVIDER=twilio # Options: twilio, aws-sns, messagebird
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
SMS_FROM_NUMBER=+1234567890
SMS_STATUS_CALLBACK_URL=
SMS_SANDBOX=false

# MessageBird Configuration (if using MessageBird)
MESSAGEBIRD_API_KEY=

# Push Notifications
# Firebase Configuration
FIREBASE_PROJECT_ID=
FIREBASE_PRIVATE_KEY=
FIREBASE_CLIENT_EMAIL=
PUSH_DEFAULT_ICON=/icon-192x192.png
PUSH_SANDBOX=false

# Apple Push Notification Service (APNs)
APNS_KEY_ID=
APNS_TEAM_ID=
APNS_PRIVATE_KEY=
IOS_BUNDLE_ID=com.zkfair.app

# Notification Settings
NOTIFICATION_RATE_LIMIT_PER_USER=100
NOTIFICATION_CONCURRENCY=10
NOTIFICATION_BATCH_SIZE=100
NOTIFICATION_RETRY_ATTEMPTS=3
NOTIFICATION_RETRY_DELAY=1000
NOTIFICATION_TIMEOUT=30000
TEMPLATE_PATH=./templates

# Webhook Settings
WEBHOOK_SANDBOX=false

# Enhanced Security
API_KEY_SALT=your-api-key-salt
SIGNATURE_SECRET=your-signature-secret
SESSION_SECRET=your-session-secret
MAX_LOGIN_ATTEMPTS=5
LOGIN_LOCKOUT_DURATION=900000 # 15 minutes in ms

# Contract Addresses
ENTRY_POINT_ADDRESS=0x5FF137D4b0FDCD49DcA30c7CF57E578a026d2789
PAYMASTER_ADDRESS=0x...
FACTORY_ADDRESS=0x...